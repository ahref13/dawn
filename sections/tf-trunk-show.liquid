{% comment %} THE FALL – Trunk Shows {% endcomment %}

<section class="mt-20 px-3 flex min-h-screen flex-col">
    <div class="mx-auto mb-16 grid grid-cols-1 md:grid-cols-[3fr_4fr] gap-8 border-b border-black pb-8">
        <div>
            <h2 class="font-sm uppercase">
                {{ section.settings.heading }}
            </h2>
        </div>
        <div>
            <div class="font-sm leading-tight">
                {{ section.settings.description | newline_to_br }}
            </div>
        </div>
    </div>

    {% for block in section.blocks %}
        <div class="mb-24 border-b border-gray-300 pb-24 last:border-b-0" {{ block.shopify_attributes }}>
            <div class="grid grid-cols-1 md:grid-cols-[3fr_4fr] gap-8">
                <div>
                    <div class="flex flex-col gap-4 md:flex-row md:justify-between">
                        <div class="font-sm uppercase leading-tight">DESIGNER</div>
                        <div class="font-sm uppercase leading-tight md:hidden">COLLECTION</div>
                        <div class="font-sm uppercase leading-tight md:hidden">DATE</div>
                    </div>
                    <div class="hidden md:flex md:flex-col md:gap-4">
                        <div class="font-sm uppercase leading-tight">COLLECTION</div>
                        <div class="font-sm uppercase leading-tight">DATE</div>
                    </div>
                </div>

                <div>
                    <div class="flex flex-col gap-4 mb-8 md:flex-row md:justify-between md:mb-8">
                        <div class="font-sm leading-tight">{{ block.settings.designer }}</div>
                        <div class="font-sm leading-tight md:hidden">{{ block.settings.collection }}</div>
                        <div class="font-sm leading-tight md:hidden">{{ block.settings.date }}</div>
                    </div>
                    <div class="hidden md:flex md:flex-col md:gap-4 md:mb-8">
                        <div class="font-sm leading-tight">{{ block.settings.collection }}</div>
                        <div class="font-sm leading-tight">{{ block.settings.date }}</div>
                    </div>

                    {% if block.settings.image != blank %}
                        <div class="w-full my-8">
                            {{ block.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', class: 'w-full h-auto block' }}
                        </div>
                    {% endif %}

                    <div class="flex flex-col gap-8 mt-8">
                        <div class="font-sm leading-tight">
                            {{ block.settings.description | newline_to_br }}
                        </div>

                        {% if block.settings.button_url != blank and block.settings.button_text != blank %}
                            <a href="{{ block.settings.button_url }}" class="font-sm inline-block border border-black px-8 py-4 text-center transition-all duration-200 uppercase hover:bg-black hover:text-white no-underline">
                                {{ block.settings.button_text }}
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</section>

{% schema %}
{
  "name": "TF • Trunk Shows",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "UPCOMING TRUNK SHOWS"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Trunk shows are made-to-order collections that join us for a limited period of time - usually the latest collection from a designer, and sometimes additional styles on request. Trunk shows are ideal for trying pieces that aren't part of our permanent collections, and we typically offer a promotional discount. At The Fall we host trunk shows from our permanent designers as well as guest designers - in many cases U.K. exclusives."
    }
  ],
  "blocks": [
    {
      "type": "trunk_show",
      "name": "Trunk Show",
      "settings": [
        {
          "type": "text",
          "id": "designer",
          "label": "Designer",
          "default": "Cassandra Graham"
        },
        {
          "type": "text",
          "id": "collection",
          "label": "Collection",
          "default": "CG03"
        },
        {
          "type": "text",
          "id": "date",
          "label": "Date",
          "default": "20 - 26 October"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Cassandra Graham's third collection will be an exclusive UK trunk show.\n\nFor her third collection, Cassandra Graham dives further into fabric, texture and volume exploration - whilst keeping her signature contemporary 80s-90s aesthetic and developing on the drop waist silhouettes that we all love."
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Book Trunk Show"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "TF • Trunk Shows"
    }
  ]
}
{% endschema %}
