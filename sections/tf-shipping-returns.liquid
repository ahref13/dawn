{% comment %} THE FALL – Shipping & Returns {% endcomment %}
{{ 'tf-shipping-returns.css' | asset_url | stylesheet_tag }}

<section class="tf-shipping">
  <div class="tf-shipping__container">
    <div class="tf-shipping__heading font-sm">
      {{ section.settings.heading }}
    </div>

    <div class="tf-shipping__body">
      <ul class="tf-shipping__list">
        {% for block in section.blocks %}
          <li class="tf-shipping__item" {{ block.shopify_attributes }}>
            <div class="tf-shipping__item-number font-xs">
              {{ forloop.index | prepend: '0' }}
            </div>
            <div class="tf-shipping__item-content">
              <div class="tf-shipping__item-title font-base">
                {{ block.settings.title }}
              </div>
              <p class="tf-shipping__item-subtext font-sm">
                {{ block.settings.description }}
              </p>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "TF • Shipping & Returns",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shipping & Returns"
    }
  ],
  "blocks": [
    {
      "type": "shipping_item",
      "name": "Shipping Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Standard Shipping"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Free shipping on all orders over $100. Delivered within 5-7 business days."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "TF • Shipping & Returns",
      "blocks": [
        {
          "type": "shipping_item",
          "settings": {
            "title": "Standard Shipping",
            "description": "Free shipping on all orders over $100. Delivered within 5-7 business days."
          }
        },
        {
          "type": "shipping_item",
          "settings": {
            "title": "Express Shipping",
            "description": "Fast delivery within 2-3 business days for urgent orders."
          }
        },
        {
          "type": "shipping_item",
          "settings": {
            "title": "International Shipping",
            "description": "We ship worldwide. Delivery times vary by destination."
          }
        },
        {
          "type": "shipping_item",
          "settings": {
            "title": "Returns Policy",
            "description": "30-day return policy on unworn items with tags attached. Return shipping is free."
          }
        },
        {
          "type": "shipping_item",
          "settings": {
            "title": "Exchanges",
            "description": "Free exchanges available within 30 days of purchase."
          }
        }
      ]
    }
  ]
}
{% endschema %}