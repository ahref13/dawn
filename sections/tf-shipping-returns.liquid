{% comment %} THE FALL – Shipping & Returns - Tailwind Grid {% endcomment %}

<section class="min-h-[92vh] w-full grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-8 px-[20px] md:px-[30px] lg:px-[50px] gap-[15px] md:gap-[20px] lg:gap-[40px] pt-[130px] pb-[60px] bg-[#CFCAC6]">

  <!-- Heading -->
  <div class="col-span-2 font-sm">
    <div class="uppercase mb-8">
      {{ section.settings.heading }}
    </div>
  </div>

  <!-- Shipping List -->
  <div class="col-span-2 col-start-1 md:col-span-2 md:col-start-3 lg:col-span-2 lg:col-start-4 xl:col-span-3 xl:col-start-5">
    <ul class="list-none p-0 m-0">
      {% for block in section.blocks %}
        <li class="flex max-md:flex-col gap-6 mb-20" {{ block.shopify_attributes }}>
          <div class="font-xs flex-shrink-0 pt-1">
            {{ forloop.index | prepend: '0' }}
          </div>
          <div class="flex-1">
            <div class="font-base">
              {{ block.settings.title }}
            </div>
            <p class="font-sm mt-4 mb-0">
              {{ block.settings.description }}
            </p>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>

</section>

{% schema %}
{
  "name": "TF • Shipping & Returns",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shipping & Returns"
    }
  ],
  "blocks": [
    {
      "type": "shipping_item",
      "name": "Shipping Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Standard Shipping"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Free shipping on all orders over $100. Delivered within 5-7 business days."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "TF • Shipping & Returns",
      "blocks": [
        {
          "type": "shipping_item",
          "settings": {
            "title": "Standard Shipping",
            "description": "Free shipping on all orders over $100. Delivered within 5-7 business days."
          }
        },
        {
          "type": "shipping_item",
          "settings": {
            "title": "Express Shipping",
            "description": "Fast delivery within 2-3 business days for urgent orders."
          }
        },
        {
          "type": "shipping_item",
          "settings": {
            "title": "International Shipping",
            "description": "We ship worldwide. Delivery times vary by destination."
          }
        },
        {
          "type": "shipping_item",
          "settings": {
            "title": "Returns Policy",
            "description": "30-day return policy on unworn items with tags attached. Return shipping is free."
          }
        },
        {
          "type": "shipping_item",
          "settings": {
            "title": "Exchanges",
            "description": "Free exchanges available within 30 days of purchase."
          }
        }
      ]
    }
  ]
}
{% endschema %}
