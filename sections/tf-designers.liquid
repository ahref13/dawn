{% comment %} THE FALL – About {% endcomment %}
{{ 'tf-about.css' | asset_url | stylesheet_tag }}

<section class="tf-about">
  <div class="tf-about__container">
    <div class="tf-about__left">
      <h1 class="tf-about__logo font-{{ section.settings.font_size_logo }}">
        {{ section.settings.logo_text }}
      </h1>
      <h2 class="tf-about__heading font-{{ section.settings.font_size_heading }}">
        {{ section.settings.heading }}
      </h2>
    </div>
    <div class="tf-about__right font-{{ section.settings.font_size_text }}">
      <div class="tf-about__body">
        {{ section.settings.body | newline_to_br }}
      </div>
    </div>
  </div>

  <div class="tf-about__info">
    <div class="tf-about__info-block">
      <h3 class="tf-about__info-title">Visit Us</h3>
      <p class="tf-about__info-text font-{{ section.settings.font_size_text }}">
        {{ section.settings.visit_us | newline_to_br }}
      </p>
    </div>
    <div class="tf-about__info-block">
      <h3 class="tf-about__info-title">Hours</h3>
      <p class="tf-about__info-text font-{{ section.settings.font_size_text }}">
        {{ section.settings.hours | newline_to_br }}
      </p>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "TF • About",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "THE–FALL"
    },
    {
      "type": "select",
      "id": "font_size_logo",
      "label": "Font size logo",
      "default": "xxl",
      "options": [
        { "value": "xs", "label": "Extra Small" },
        { "value": "sm", "label": "Small" },
        { "value": "base", "label": "Base" },
        { "value": "lg", "label": "Large" },
        { "value": "xl", "label": "Extra Large" },
        { "value": "xxl", "label": "XXL" }
      ]
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About The Fall"
    },
    {
      "type": "select",
      "id": "font_size_heading",
      "label": "Font size heading",
      "default": "base",
      "options": [
        { "value": "xs", "label": "Extra Small" },
        { "value": "sm", "label": "Small" },
        { "value": "base", "label": "Base" },
        { "value": "lg", "label": "Large" },
        { "value": "xl", "label": "Extra Large" },
        { "value": "xxl", "label": "XXL" }
      ]
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Main body text",
      "default": "Founded in late 2019, The Fall was created with the contemporary, independent woman in mind..."
    },
    {
      "type": "select",
      "id": "font_size_text",
      "label": "Font size text",
      "default": "base",
      "options": [
        { "value": "xs", "label": "Extra Small" },
        { "value": "sm", "label": "Small" },
        { "value": "base", "label": "Base" },
        { "value": "lg", "label": "Large" },
        { "value": "xl", "label": "Extra Large" },
        { "value": "xxl", "label": "XXL" }
      ]
    },
    {
      "type": "textarea",
      "id": "visit_us",
      "label": "Visit Us Text",
      "default": "Dalston Works – Ground Floor\n9 Martel Place, London E8 2FR\n\n_We are near the corner of Martel Pl and Dalston Ln – input 'Dalston Works' into a maps app_"
    },
    {
      "type": "textarea",
      "id": "hours",
      "label": "Opening Hours",
      "default": "Mon – 4pm–7:30pm\nTue–Fri – 10am–7:30pm\nSat–Sun – 10am–6:30pm\n\n_Please note we are by appointment only_"
    }
  ],
  "presets": [
    {
      "name": "TF • About"
    }
  ]
}
{% endschema %}
