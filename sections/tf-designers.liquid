{% comment %} THE FALL – Designers {% endcomment %}

<section class="relative min-h-screen w-full">
    {% comment %} Background Image {% endcomment %}
    {% if section.settings.image != blank %}
        {{ section.settings.image
        | image_url: width: 2400
        | image_tag:
        class: 'absolute inset-0 w-full h-screen object-cover block',
        loading: 'eager' }}
    {% endif %}

    {% comment %} Grid Overlay with Centered Content {% endcomment %}
    <div class="relative grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-8 grid-rows-1 px-[20px] md:px-[30px] lg:px-[50px] gap-[15px] md:gap-[20px] lg:gap-[40px] w-full h-screen">

        {% comment %} Content spans all columns and centers vertically {% endcomment %}
        <div class="col-span-2 md:col-span-4 lg:col-span-6 xl:col-span-8 flex flex-col items-center justify-center text-center">
            <h1 class="font-xl tracking-[0.06em] text-white leading-none inline-flex items-center gap-2 my-4">
                {{ section.settings.title | escape }}
            </h1>

            {% if section.settings.subtitle_label != blank %}
                <p class="font-sm block w-[80vw] max-w-[800px] leading-normal mt-0 text-white">
                    {{ section.settings.subtitle_label }}
                </p>
            {% endif %}

            {% if section.settings.link_url != blank %}
                <a class="font-xs block mt-4 no-underline text-white" href="{{ section.settings.link_url }}">
                    {{ section.settings.link_label }}
                </a>
            {% endif %}
        </div>
    </div>
</section>

{% schema %}
{
  "name": "TF • Designers",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Background image" },
    { "type": "text", "id": "title", "label": "Title", "default": "THE—FALL" },
    { "type": "text", "id": "subtitle_label", "label": "Subtitle", "default": "Lorem ipsum" },
    { "type": "url", "id": "link_url", "label": "Button link" },
    { "type": "text", "id": "link_label", "label": "Button label", "default": "Shop" }
  ],
  "presets": [
    { "name": "TF • Designers" }
  ]
}
{% endschema %}