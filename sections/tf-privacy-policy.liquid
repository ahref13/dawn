{% comment %} THE FALL – Privacy Policy - Tailwind Grid {% endcomment %}

<section class="min-h-[92vh] w-full grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-8 px-[20px] md:px-[30px] lg:px-[50px] gap-[15px] md:gap-[20px] lg:gap-[40px] pt-[130px] pb-[60px] bg-[#CFCAC6]">

  <!-- Heading -->
  <div class="col-span-2 font-sm">
    <div class="uppercase mb-8">
      {{ section.settings.heading }}
    </div>
  </div>

  <!-- Privacy Policy List -->
  <div class="col-span-2 col-start-1 md:col-span-2 md:col-start-3 lg:col-span-2 lg:col-start-4 xl:col-span-3 xl:col-start-5">
    <ul class="list-none p-0 m-0">
      {% for block in section.blocks %}
        <li class="flex max-md:flex-col gap-6 mb-20" {{ block.shopify_attributes }}>
          <div class="font-xs flex-shrink-0 pt-1">
            {{ forloop.index | prepend: '0' }}
          </div>
          <div class="flex-1">
            <div class="font-base">
              {{ block.settings.title }}
            </div>
            <div class="font-sm mt-4">
              {{ block.settings.description }}
            </div>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>

</section>

{% schema %}
{
  "name": "TF • Privacy Policy",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Privacy Policy"
    }
  ],
  "blocks": [
    {
      "type": "privacy_item",
      "name": "Privacy Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Information We Collect"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>We collect information you provide directly to us, such as your name, email address, and payment information.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "TF • Privacy Policy",
      "blocks": [
        {
          "type": "privacy_item",
          "settings": {
            "title": "Information We Collect",
            "description": "<p>We collect information you provide directly to us, such as your name, email address, shipping address, and payment information when you make a purchase or create an account.</p>"
          }
        },
        {
          "type": "privacy_item",
          "settings": {
            "title": "How We Use Your Information",
            "description": "<p>We use the information we collect to process orders, communicate with you, improve our services, and provide personalized shopping experiences.</p>"
          }
        },
        {
          "type": "privacy_item",
          "settings": {
            "title": "Information Sharing",
            "description": "<p>We do not sell your personal information. We may share information with service providers who help us operate our business, such as payment processors and shipping companies.</p>"
          }
        },
        {
          "type": "privacy_item",
          "settings": {
            "title": "Data Security",
            "description": "<p>We implement appropriate security measures to protect your personal information from unauthorized access, alteration, or disclosure.</p>"
          }
        },
        {
          "type": "privacy_item",
          "settings": {
            "title": "Your Rights",
            "description": "<p>You have the right to access, correct, or delete your personal information. Contact us to exercise these rights or if you have any questions about our privacy practices.</p>"
          }
        },
        {
          "type": "privacy_item",
          "settings": {
            "title": "Cookies and Tracking",
            "description": "<p>We use cookies and similar technologies to enhance your browsing experience, analyze site traffic, and understand user preferences.</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}