{% comment %} TF • Side Title + Text (rich text body) {% endcomment %}

<section class="grid grid-cols-1 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-8 px-[20px] md:px-[30px] lg:px-[50px] gap-[15px] md:gap-[20px] lg:gap-[40px] py-16 md:py-20 bg-white">

    {% comment %} Heading - Takes 1-2 columns {% endcomment %}
    <div class="col-span-1 md:col-span-2 lg:col-span-3 xl:col-span-4">
        <h2 class="font-sm uppercase font-normal">
            {{ section.settings.heading }}
        </h2>
    </div>

    {% comment %} Body + Link - Takes remaining columns {% endcomment %}
    <div class="col-span-1 md:col-span-2 lg:col-span-3 xl:col-span-4">
        <div class="font-sm">
            {{ section.settings.paragraph }}
        </div>

        {% if section.settings.link_url != blank and section.settings.link_text != blank %}
            <a href="{{ section.settings.link_url }}" class="font-sm inline-block mt-4 underline">
                {{ section.settings.link_text }}
            </a>
        {% endif %}
    </div>

</section>

{% schema %}
{
  "name": "TF • Side Title + Text",
  "tag": "section",
  "class": "section-side-title-text",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Side Title",
      "default": "About The Fall"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Body Text",
      "default": "<p>Add your paragraph content here…</p>"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "Learn more"
    }
  ],
  "presets": [
    { "name": "TF • Side Title + Text" }
  ]
}
{% endschema %}