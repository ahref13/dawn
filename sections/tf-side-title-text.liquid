{% comment %} Reusable Side Title + Text Component {% endcomment %}
{% if tf_side_title_text == blank %}
    {%- assign tf_side_title_text = true -%}
    {{ 'tf-side-title-text.css' | asset_url | stylesheet_tag }}
{% endif %}

<section class="side-title-text">
    <div class="side-title-text__container">
        <div class="side-title-text__left">
            <h2 class="side-title-text__heading font-{{ section.settings.font_size_variant }}">{{ section.settings.heading }}</h2>
        </div>
        <div class="side-title-text__right">
            <div class="side-title-text__body font-{{ section.settings.font_size_variant }}">
                {{ section.settings.paragraph | newline_to_br }}
            </div>
            {% if section.settings.link_url != blank and section.settings.link_text != blank %}
                <a href="{{ section.settings.link_url }}" class="side-title-text__link">
                    {{ section.settings.link_text }}
                </a>
            {% endif %}
        </div>
    </div>
</section>

{% schema %}
{
  "name": "TF â€¢ Side Title + Text",
  "tag": "section",
  "class": "section-side-title-text",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Side Title",
      "default": "About The Fall"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Body Text",
      "default": "Add your paragraph content here..."
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "Learn more"
    },
    {
      "type": "select",
      "id": "font_size_variant",
      "label": "Font size",
      "default": "base",
      "options": [
        { "value": "xs", "label": "Extra Small" },
        { "value": "sm", "label": "Small" },
        { "value": "base", "label": "Base" },
        { "value": "lg", "label": "Large" },
        { "value": "xl", "label": "Extra Large" },
        { "value": "xxl", "label": "XXL" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Side Title + Text"
    }
  ]
}
{% endschema %}
