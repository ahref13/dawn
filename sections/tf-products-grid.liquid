{% comment %} THE FALL – Collection Template - Tailwind Grid {% endcomment %}

{% paginate collection.products by 16 %}

    <section class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-12 px-[20px] md:px-[30px] lg:px-[50px] gap-[15px] md:gap-[20px] lg:gap-[40px] pb-[60px] mt-20" style="margin-top: 130px;" data-section-id="{{ section.id }}">

        <!-- Collection Links Navigation - Spans full width -->
        <div class="col-span-2 md:col-span-4 lg:col-span-6 xl:col-span-12 flex justify-between items-center gap-12 flex-wrap max-md:flex-col max-md:gap-6">
            <a href="/collections/all-products"
               class="bg-transparent border-0 text-[14px] max-md:text-[12px] font-normal uppercase tracking-[0.05em] no-underline cursor-pointer py-2 text-black relative transition-opacity duration-200 hover:opacity-60 {% if collection.handle == 'all-products' %}font-medium after:content-[''] after:absolute after:bottom-0 after:left-0 after:right-0 after:h-[1px] after:bg-black{% endif %}">
                ALL
            </a>
            <a href="/collections/digital-downloads"
               class="bg-transparent border-0 text-[14px] max-md:text-[12px] font-normal uppercase tracking-[0.05em] no-underline cursor-pointer py-2 text-black relative transition-opacity duration-200 hover:opacity-60 {% if collection.handle == 'digital-downloads' %}font-medium after:content-[''] after:absolute after:bottom-0 after:left-0 after:right-0 after:h-[1px] after:bg-black{% endif %}">
                DIGITAL DOWNLOADS
            </a>
            <a href="/collections/accessories-veils"
               class="bg-transparent border-0 text-[14px] max-md:text-[12px] font-normal uppercase tracking-[0.05em] no-underline cursor-pointer py-2 text-black relative transition-opacity duration-200 hover:opacity-60 {% if collection.handle == 'accessories-veils' %}font-medium after:content-[''] after:absolute after:bottom-0 after:left-0 after:right-0 after:h-[1px] after:bg-black{% endif %}">
                ACCESSORIES & VEILS
            </a>
            <a href="/collections/jewellery"
               class="bg-transparent border-0 text-[14px] max-md:text-[12px] font-normal uppercase tracking-[0.05em] no-underline cursor-pointer py-2 text-black relative transition-opacity duration-200 hover:opacity-60 {% if collection.handle == 'jewellery' %}font-medium after:content-[''] after:absolute after:bottom-0 after:left-0 after:right-0 after:h-[1px] after:bg-black{% endif %}">
                JEWELLERY
            </a>
            <a href="/collections/shoes-bags"
               class="bg-transparent border-0 text-[14px] max-md:text-[12px] font-normal uppercase tracking-[0.05em] no-underline cursor-pointer py-2 text-black relative transition-opacity duration-200 hover:opacity-60 {% if collection.handle == 'shoes-bags' %}font-medium after:content-[''] after:absolute after:bottom-0 after:left-0 after:right-0 after:h-[1px] after:bg-black{% endif %}">
                SHOES & BAGS
            </a>
        </div>

        <!-- Products Grid - Each product takes 1 column on small/medium/large, 2 columns on xl -->
        {% for product in collection.products %}
            <a href="{{ product.url }}"
               class="text-left no-underline text-inherit flex flex-col items-start w-full col-span-1 xl:col-span-2">

                {% if product.featured_image %}
                    {{ product.featured_image
                    | image_url: width: 500
                    | image_tag:
                    class: 'w-full aspect-[242/346] object-cover block',
                    loading: 'lazy',
                    alt: product.title,
                    sizes: '(max-width: 768px) 50vw, (max-width: 1024px) 25vw, (max-width: 1280px) 16.66vw, 16.66vw',
                    widths: '242, 320, 484, 500'
                    }}
                {% else %}
                    <div class="w-full aspect-[242/346] bg-gray-200"></div>
                {% endif %}

                <div class="mt-2 w-full">
                    <h3 class="text-[14px] font-medium leading-[1.3] my-1">{{ product.title }}</h3>
                    <div class="text-[10px] mt-1">
                        {{ product.price | money }}
                    </div>
                </div>
            </a>
        {% endfor %}

        {% if collection.products.size == 0 %}
            <div class="col-span-2 md:col-span-4 lg:col-span-6 xl:col-span-12 text-center py-16 px-4 text-[16px] text-[#666]">
                No products found in this collection.
            </div>
        {% endif %}

        <!-- Pagination - Spans full width -->
        {% if paginate.pages > 1 %}
            <div class="col-span-2 md:col-span-4 lg:col-span-6 xl:col-span-12 flex justify-center items-center gap-8 max-md:gap-4 mt-16 max-md:mt-12 py-8">
                {% if paginate.previous %}
                    <a href="{{ paginate.previous.url }}"
                       class="bg-transparent border-0 text-[14px] max-md:text-[12px] font-normal uppercase tracking-[0.05em] cursor-pointer py-2 px-4 max-md:px-2 text-black no-underline transition-opacity duration-200 hover:opacity-60">
                        ← BACK
                    </a>
                {% else %}
                    <span class="bg-transparent border-0 text-[14px] max-md:text-[12px] font-normal uppercase tracking-[0.05em] cursor-not-allowed py-2 px-4 max-md:px-2 text-black no-underline opacity-30 pointer-events-none">
                        ← BACK
                    </span>
                {% endif %}

                <div class="flex gap-2 items-center">
                    {% for part in paginate.parts %}
                        {% if part.is_link %}
                            <a href="{{ part.url }}"
                               class="text-[14px] max-md:text-[12px] text-black no-underline py-2 px-3 max-md:px-2 transition-opacity duration-200 hover:opacity-60 min-w-[36px] max-md:min-w-[32px] text-center">
                                {{ part.title }}
                            </a>
                        {% elsif part.title == paginate.current_page %}
                            <span class="text-[14px] max-md:text-[12px] text-black no-underline py-2 px-3 max-md:px-2 min-w-[36px] max-md:min-w-[32px] text-center font-medium relative after:content-[''] after:absolute after:bottom-1 after:left-1/2 after:-translate-x-1/2 after:w-[20px] after:h-[1px] after:bg-black">
                                {{ part.title }}
                            </span>
                        {% else %}
                            <span class="text-[14px] max-md:text-[12px] text-black no-underline py-2 px-3 max-md:px-2 min-w-[36px] max-md:min-w-[32px] text-center opacity-50 pointer-events-none">
                                {{ part.title }}
                            </span>
                        {% endif %}
                    {% endfor %}
                </div>

                {% if paginate.next %}
                    <a href="{{ paginate.next.url }}"
                       class="bg-transparent border-0 text-[14px] max-md:text-[12px] font-normal uppercase tracking-[0.05em] cursor-pointer py-2 px-4 max-md:px-2 text-black no-underline transition-opacity duration-200 hover:opacity-60">
                        NEXT →
                    </a>
                {% else %}
                    <span class="bg-transparent border-0 text-[14px] max-md:text-[12px] font-normal uppercase tracking-[0.05em] cursor-not-allowed py-2 px-4 max-md:px-2 text-black no-underline opacity-30 pointer-events-none">
                        NEXT →
                    </span>
                {% endif %}
            </div>
        {% endif %}

    </section>

{% endpaginate %}

