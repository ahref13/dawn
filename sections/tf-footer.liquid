{% comment %} THE FALL – Footer {% endcomment %}

<footer class="bg-[#252525] text-white pb-7">
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-8 grid-rows-1 px-[20px] md:px-[30px] lg:px-[50px] gap-[15px] md:gap-[20px] lg:gap-[40px] pt-8 pb-48">
        <div class="flex col-start-7 col-span-2 font-xs justify-end">
            ©The Fall Bridal Ltd. 2020-2025
        </div>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-8 grid-rows-1 px-[20px] md:px-[30px] lg:px-[50px] gap-[15px] md:gap-[20px] lg:gap-[40px] items-end">

        {% comment %} Logo - left side, 3 columns on desktop {% endcomment %}
        <a class="col-span-2 md:col-span-2 lg:col-span-3 xl:col-span-3 text-white no-underline"
           href="{{ routes.root_url }}"
           aria-label="{{ shop.name }}">
            {% if section.settings.logo != blank %}
                <img src="{{ section.settings.logo | image_url: width: 400 }}"
                     alt="{{ shop.name }}"
                     class="w-full h-auto block">
            {% else %}
                <span class="text-[2rem] font-bold tracking-[0.06em] text-white">{{ shop.name }}</span>
            {% endif %}
        </a>

        {% comment %} Menu - starts at column 5 on desktop {% endcomment %}
        <nav class="col-span-4 md:col-span-2 md:col-start-3 md:justify-self-start lg:col-start-4 xl:col-start-5 flex">
            <ul class="flex flex-wrap gap-4 lg:gap-7 list-none leading-normal -mb-[6px]" role="list">
                {% for link in section.settings.menu.links %}
                    <li class="mb-0">
                        <a class="font-xs text-white no-underline hover:underline whitespace-nowrap" href="{{ link.url }}">
                            {{ link.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </nav>

    </div>
</footer>

{% schema %}
{
  "name": "TF • Footer",
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Logo" },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Footer Menu",
      "default": "footer"
    }
  ],
  "presets": [{ "name": "TF • Footer" }]
}
{% endschema %}