{% comment %} THE FALL – Appointment - Tailwind Grid {% endcomment %}

<section class="min-h-[92vh] w-full grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-8 px-[20px] md:px-[30px] lg:px-[50px] gap-[15px] md:gap-[20px] lg:gap-[40px] pb-[60px] bg-[#CFCAC6]" style="padding-top: 130px";>

  <!-- Heading - Columns 1-2 on mobile, column 3 on md, column 4 on lg, column 5 on xl -->
  <div class="col-span-2 font-sm">
    <div class="uppercase mb-8">
      {{ section.settings.heading }}
    </div>
  </div>

  <!-- Appointment List - Starts at column 4 on md, column 5 on lg, column 6 on xl -->
  <div class="col-span-2 col-start-1 md:col-span-2 md:col-start-3 lg:col-span-3 lg:col-start-4 xl:col-span-4 xl:col-start-5">
    <ul class="list-none p-0 m-0">
      {% for block in section.blocks %}
        <li class="flex max-md:flex-col gap-2 mb-8">
          <div class="font-xs flex-shrink-0 pt-1">
            {{ forloop.index | prepend: '0' }}
          </div>
          <div>
            <div class="font-base">
              {{ block.settings.title }}
            </div>
            <p class="font-sm mt-2 mb-6">
              {{ block.settings.description }}
            </p>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>

{% schema %}
{
  "name": "TF • Appointment",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Appointment Types"
    }
  ],
  "blocks": [
    {
      "type": "appointment",
      "name": "Appointment Type",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "First fitting"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "1hr appointment for your first visit to try dresses from our permanent collections."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "TF • Appointment",
      "blocks": [
        { "type": "appointment", "settings": { "title": "First fitting", "description": "1hr appointment for your first visit to try dresses from our permanent collections." }},
        { "type": "appointment", "settings": { "title": "Follow up fitting", "description": "30min to retry favourites and take measurements." }},
        { "type": "appointment", "settings": { "title": "Accessories", "description": "30min styling appointment for hair accessories, veils, shoes and jewellery." }},
        { "type": "appointment", "settings": { "title": "Order pickup", "description": "30min appointment to collect your order." }},
        { "type": "appointment", "settings": { "title": "Order pickup and accessories", "description": "60min appointment to collect your order and tie it in with an accessories appointment." }},
        { "type": "appointment", "settings": { "title": "Trunk show", "description": "Specific to trunk show collections that are with us for select dates." }},
        { "type": "appointment", "settings": { "title": "Book appointment", "description": "All appointment types show live availability. We recommend reading our FAQs to answer any questions you may have about appointments, price range, the ordering process and more." }}
      ]
    }
  ]
}
{% endschema %}
