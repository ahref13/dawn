{% comment %} THE FALL – Terms & Conditions - Tailwind Grid {% endcomment %}

<section class="min-h-[92vh] w-full grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-8 px-[20px] md:px-[30px] lg:px-[50px] gap-[15px] md:gap-[20px] lg:gap-[40px] pt-[130px] pb-[60px] bg-[#CFCAC6]">

    <!-- Heading -->
    <div class="col-span-2 font-sm">
        <div class="uppercase mb-8">
            {{ section.settings.heading }}
        </div>
    </div>

    <!-- Terms & Conditions List -->
    <div class="col-span-2 col-start-1 md:col-span-2 md:col-start-3 lg:col-span-2 lg:col-start-4 xl:col-span-3 xl:col-start-5">
        <ul class="list-none p-0 m-0">
            {% for block in section.blocks %}
                <li class="flex max-md:flex-col gap-6 mb-20" {{ block.shopify_attributes }}>
                    <div class="font-xs flex-shrink-0 pt-1">
                        {{ forloop.index | prepend: '0' }}
                    </div>
                    <div class="flex-1">
                        <div class="font-base">
                            {{ block.settings.title }}
                        </div>
                        <div class="font-sm mt-4">
                            {{ block.settings.description }}
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>

</section>

{% schema %}
{
  "name": "TF • Terms & Conditions",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Terms & Conditions"
    }
  ],
  "blocks": [
    {
      "type": "terms_item",
      "name": "Terms Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Acceptance of Terms"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>By accessing and using this website, you accept and agree to be bound by the terms and provision of this agreement.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "TF • Terms & Conditions",
      "blocks": [
        {
          "type": "terms_item",
          "settings": {
            "title": "Acceptance of Terms",
