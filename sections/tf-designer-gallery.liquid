{{ 'tf-designer-gallery.css' | asset_url | stylesheet_tag }}

<section class="tf-designer">
    {% if page.metafields.custom.designer_thumbnail %}
        {{ page.metafields.custom.designer_thumbnail | image_url: width: 2400 | image_tag: class: 'tf-hero__img', loading: 'eager' }}
    {% endif %}

    <div class="tf-designer__overlay">
        <h1 class="tf-designer__title font-xl">{{ page.title }}</h1>
    </div>

    {% if page.metafields.custom.designer_description %}
        <div class="tf-designer__description">
            <p>{{ page.metafields.custom.designer_description | newline_to_br }}</p>
        </div>
    {% endif %}

    <div class="tf-designer__gallery">
        {% for item in page.metafields.custom.designer_gallery_image.value %}
            <div class="tf-designer__gallery-item">
                {% if item.image %}
                    <img
                            src="{{ item.image | image_url: width: 242, height: 346, crop: 'center' }}"
                            alt="{{ item.title }}"
                            class="tf-designer__gallery-image"
                            loading="lazy"
                    >
                {% endif %}
                <div class="tf-designer__gallery-title">{{ item.title }}</div>
            </div>
        {% endfor %}
    </div>

</section>
